---
# yamllint configuration
extends: default

# Ignore certain files and directories
ignore: |
  .venv/
  venv/
  node_modules/
  .git/
  __pycache__/
  *.egg-info/
  build/
  dist/
  .pytest_cache/
  .mypy_cache/
  .ruff_cache/

rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
    indent-sequences: true
  comments:
    min-spaces-from-content: 1
  comments-indentation: {}
  truthy:
    allowed-values: ['true', 'false']
    check-keys: false
